@model IEnumerable<Proyecto_EFSTRIII.Models.Inmueble>
@{
    ViewBag.Title = "Home Page";
}

<section class="section-full">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.construyehogar.com/wp-content/uploads/2014/08/Dise%C3%B1o-de-casa-moderna-de-una-planta.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://www.triada.com.pe/noticias/wp-content/uploads/2019/07/ventajas-invertir-departamentos-que-en-casas-aspectos-fundamentales-1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://www.yaencontre.com/noticias/wp-content/uploads/2020/01/casas.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<!--
*************************************
            LO MAS PEDIDO
*************************************
-->
<section>
    <h2 style="text-align:center; margin-bottom: 10px;">Explora nuestros inmuebles</h2>
    <div class="m-x-5">
        <div class="container-fluid">
                <div class="row">
            @foreach (var item in Model)
            {
                    <div class="col-3">
                        <div class="card card-normal">
                            <a href="/Inmueble" class="link">
                                <img class="card-img-top product-img" src="@item.urlImagen" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title mb-0 text-center">@item.descInmueble</h5>
                                    <p class="card-text text-center my-1">@item.nombreDistrito</p>
                                    <p class="card-text text-center my-1">S./ @item.costoInmueble</p>
                                </div>
                            </a>
                        </div>
                    </div>
            }
                </div>
            <div class="row mb-3">

            </div>
            
            <nav aria-label="Page navigation example" id="pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#">Anterior</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Siguiente</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</section>